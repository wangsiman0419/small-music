/* pages/music/music.wxss */
.banner-img{
    width: 100%;
}
.album-box{
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
}
.album{
    width: 220rpx;
    display: flex;
    flex-direction: column;
}
.album image{
    width: 220rpx;
    height: 200rpx;
}
.album text{
    font-size: 25rpx;
}
.subTitle{
    font-size: 40rpx;
    font-weight: bold;
    padding: 20rpx 0;
}
.dj-title{
    margin-left: 300rpx;
}

.dj-box{
    display: flex;
    flex-wrap: wrap;
    justify-content: space-evenly;
}
.dj-right{
    display: flex;
    flex-direction: column;
}
.dj-detail{
    display: flex;
    z-index: 101;
    font-size: 30rpx;
    color: #fff;
    margin: 40rpx 10rpx 30rpx 20rpx;
}
.dj{
    width: 250rpx;
    position: relative;
}
.dj-wrap {
    position: absolute;
    top: 30rpx;
    left:0rpx;
}
.bg{
    width: 250rpx;
    height:940rpx;
}
.hot-title{
    font-size: 40rpx;
    color: rgb(230, 227, 227);
    text-align: center;
    margin-top: 20rpx;
}
.hot-subtitle{
    font-size: 50rpx;
    color: #fff;
    text-align: center;
}
.dj-detail .num{
    margin-right: 10rpx;
}
.more{
    margin-left: 200rpx;
    font-size: 30rpx;
    color: #333;
}
.author{
    margin-top: 15rpx;
}
.foot{
    display: flex;
    justify-content: space-between;
}
.foot image{
    width: 15px;
    height: 15px;
}



.title-list{
    height: 80rpx;
    width: 100%;
    background: #F5F5F5;
    color: rgb(65, 64, 64);
    font-size: 32rpx;
    border-bottom:1px solid rgb(212, 212, 212);
}
.title-list .num{
    display: inline-block;
    width: 55rpx;
    line-height: 40rpx;
}
.title-list .music-title{
    display: inline-block;
    width: 300rpx;
    height: 80rpx;
    line-height:80rpx;
    padding-left: 20rpx;
}
.singer{
    display: inline-block;
    width: 190rpx;
    height: 80rpx;
    line-height:80rpx;
    padding-left: 25rpx;
}
.time{
    display: inline-block;
    width: 100rpx;
    height: 80rpx;
    line-height:80rpx;
    padding-left: 10rpx;
}
.times{
   color: rgb(44, 43, 43);
}
.num-title{
    width: 100rpx;
    padding-left: 10rpx;
    display: inline-block;
}
.head-title{
    display: inline-block;
    width: 235rpx;
    margin-left: 60rpx;
}
.head-singer{
    display: inline-block;
    width: 180rpx;
}
.list{
    font-size: 28rpx;
    height: 100rpx;
    line-height: 100rpx;
    position: relative;
}
.times-title{
    display: inline-block;
    margin-left: 15rpx;
}
.play-icon{
    width: 80rpx;
    height: 80rpx;
    position: absolute;
    top: 15rpx;
    left: 73rpx;
}
.active{
    background: rgb(240, 240, 240);
}
.rank-list{
    margin-top: 10rpx;
    margin-bottom: 10rpx;
}
.rank-pic{
    width: 15px;height: 15px;
    margin-top: 10px;
}
.num-rank{
    width: 100px;
}