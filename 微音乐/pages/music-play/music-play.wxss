/* pages/music-play/music-play.wxss */
page{
    height: 100%;
}
.container{
    position: relative;
    height: 100%;
}
.background-img{
    width: 100%;
    height: 100%;
    position: absolute;
    opacity: 0.6;
}
.box{
    z-index: 101;
    text-align: center;
    font-size: 45rpx;
}
.box .name{
    padding-top: 50rpx;
    padding-bottom: 10rpx;
}
.pic{
    width: 400rpx;
    height: 400rpx;
    border-radius: 50%;
    z-index: 105;
    position: absolute;
    top: 300rpx;
    left:20%;
    animation: rotate 5s linear infinite;
}
.paused{
  animation-play-state: paused;
}
.running{
  animation-play-state: running;
}
.box .moveCircle{
    width: 400rpx;
    height: 400rpx;
    border-radius: 50%;
    z-index: 106;
    margin-left: 100rpx;
    margin-top: 60rpx;
    animation: moveCircle 5s linear infinite;
}
.plays{
    width: 120rpx;
    height: 120rpx;
    position: absolute;
    bottom: 200rpx;
    left: 45%;
}
@keyframes rotate {
    0%{
      transform: rotate(0);
    }
   50%{
      transform: rotate(180deg);
    }
    100%{
      transform: rotate(360deg);
    }
  }

@keyframes moveCircle {
    0%{
      width: 400rpx;
      height: 400rpx;
      border: 1px solid rgb(128, 127, 127)
    }
    30%{
      width: 420rpx;
      height: 420rpx;
      border: 1px solid rgba(90, 89, 89, 0.8)
    }
    50%{
      width: 450rpx;
      height: 450rpx;
      border: 1px solid rgba(77, 76, 76, 0.6)
    }
    80%{
      width: 500rpx;
      height: 500rpx;
      border: 1px solid rgba(63, 62, 62, 0.4)
    }
    99%{
      width: 600rpx;
      height: 600rpx;
      border: 1px solid rgba(61, 60, 60, 0.1)
    }
    100%{
      width: 0rpx;
      height: 0rpx;
      border: 1px solid rgba(39, 38, 38, 0)
    }
  }