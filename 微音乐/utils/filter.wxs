function formatTime(time,min,sec){
    if(time){
        if(time/1000/60<=10){
            min="0"+Math.floor(time/1000/60)
        }else{
            min=Math.floor(time/1000/60)
        }
    
        if(time/1000%60<=10){
            sec="0"+Math.round(time/1000%60)
        }else{
            sec=Math.floor(time/1000%60)
        }
        return min+":"+sec
    }
   
}
