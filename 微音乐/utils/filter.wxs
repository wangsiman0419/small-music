function format(value){
    if(value){
        if(value.length>13){
            value=value.slice(0,13)+"..."
        }
        return value
    }
}
function formats(value){
    if(value){
        if(value.length>6){
            value=value.slice(0,6)+"..."
        }
        return value
    }
}
